@using System.Web.Optimization
<!DOCTYPE html>
<html>
    <head>
        <title>Durandal</title>

        <link rel="apple-touch-startup-image" href="~/Content/img/ios-startup-image-landscape.png" media="(orientation:landscape)" />
        <link rel="apple-touch-startup-image" href="~/Content/img/ios-startup-image-portrait.png" media="(orientation:portrait)" />
        <link rel="apple-touch-icon" href="~/Content/img/icon.png"/>
        
        @Styles.Render("~/css/vendor")
        @Styles.Render("~/css/app")

        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
        <meta name="format-detection" content="telephone=no"/>
    
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
        <!--Turns on debugging for Durandal -->
        @if (HttpContext.Current.IsDebuggingEnabled) {
            <meta name="debug" content="true" />
        }
        
        @Scripts.Render("~/scripts/vendor")
    </head>
    <body>
        <div id="applicationHost"></div>
        
        @if (HttpContext.Current.IsDebuggingEnabled) {
            <script type="text/javascript" src="~/app/vendor/require.js" data-main="app/main"></script>
        } else {
            <script type="text/javascript" src="~/app-built/main.js"></script>
        }
    </body>
</html>